<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneApp.MainPage"
             Title="Car Controller"
             Background="Black">
    <Grid 
        ColumnDefinitions="0.3*, 0.5*"
        RowDefinitions="Auto, *">
        <VerticalStackLayout
            Grid.Column="0"
            Grid.Row="0">
            <Button 
                x:Name="ConnectButton"
                Text="Connect"
                Background="Gray">
            
            </Button>
            <Button 
                x:Name="AutoModeButton"
                Text="Auto Mode"
                Background="Gray">
            
            </Button>
        </VerticalStackLayout>
        
        <Grid 
            Grid.Column="0"
            Grid.Row="1"
            RowDefinitions="30, 200"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Label
                Grid.Row="0"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                Speed
            </Label>
            <Slider 
                Grid.Row="1"
                Minimum="150" 
                Maximum="255" 
                WidthRequest="200" 
                Rotation="270"
                ValueChanged="SpeedSliderChanged">
            </Slider>
        </Grid>
        
        <Grid 
            Grid.Column="1"
            Grid.Row="1"
            ColumnDefinitions="Auto, Auto, Auto"
            RowDefinitions="Auto, Auto, Auto"
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Button 
                x:Name="StopButton"
                Grid.Column="1" 
                Grid.Row="1"
                Background="Red"
                Text="x">
            </Button>
            
            <Button 
                x:Name="RightButton"
                Grid.Column="2" 
                Grid.Row="1"
                Text="→"
                WidthRequest="60">
                
            </Button>
            <Button 
                x:Name="DownButton"
                Grid.Column="1" 
                Grid.Row="2"
                Text="↓"
                HeightRequest="60">
                
            </Button>
            <Button 
                x:Name="UpButton"
                Grid.Column="1" 
                Grid.Row="0"
                Text="↑"
                HeightRequest="60">
                
            </Button>
            <Button 
                x:Name="LeftButton"
                Grid.Column="0" 
                Grid.Row="1"
                Text="←"
                WidthRequest="60">
                
            </Button>
        </Grid>
    </Grid>

</ContentPage>